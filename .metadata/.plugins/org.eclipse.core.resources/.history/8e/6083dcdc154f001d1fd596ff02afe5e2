
public class miniProjeAsalSayi {

	public static void main(String[] args) {
		int number = -2;
		int remainder ; // remainder = kalan demek
		int i;
		boolean isPrime = true; // Prime = asal demek. Asal mı = evet.
		
		if (number == 1)
		{
			System.out.println("Sayı asal değildir.");
		}
		if (number < 1)
		{
			System.out.println("Geçersiz sayı");
		}
		
		for (i=2; i < number; i++)
		{
			if(number % i == 0)
			{
				isPrime = false;
			}
		}

		if (isPrime)
		{
			System.out.println("Sayı asaldır.");
		}else {
			System.out.println("Sayı asal değildir.");
		}
	}

}
